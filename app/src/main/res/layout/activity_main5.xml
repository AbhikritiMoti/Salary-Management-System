<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity5">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/image7" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For which month you want to generate Salary?"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_below="@id/image"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/salaryMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/leaveWithoutPayDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@+id/salaryMonth"
        android:inputType="number"

        android:hint="Enter Leave Without Pay Days" />

    <Button
        android:id="@+id/salaryGen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/leaveWithoutPayDays"
        android:text="Generate" />

    <Button
        android:id="@+id/backToMainMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/back_to_main_menu"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        app:cornerRadius="25dp"
        android:layout_below="@+id/salaryGen" />


</RelativeLayout>